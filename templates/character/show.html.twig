					<td>{{ character.deathDate ? character.deathDate|format_datetime('long', 'none', locale='fr') : '' }}</td>

				</tr>
			</tbody>
		</table>

		<a href="{{ path('app_character_index') }}" class="btn btn-primary">Retour Ã  la liste des personnages</a>

		<a href="{{ path('app_character_edit', {'id': character.id}) }}" class=" btn btn-primary">Editer le personnage</a>


		{{ include('character/_delete_form.html.twig') }}

	</div>

{% endblock %}
