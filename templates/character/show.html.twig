{% block title %}Character
{% endblock %}

{% block body %}

	<div class="container">

		<h1 class="mt-5">{{ character.name }}</h1>


		<table class="table">
			<tbody>
				<tr>
					<th>BirthDate</th>
					<td>{{ character.birthDate ? character.birthDate|format_datetime('long', 'none', locale='fr') : '' }}</td>

				</tr>
				<tr>
